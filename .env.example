# Azure OpenAI Configuration (REQUIRED)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# Azure Cognitive Search (OPTIONAL - will use local data if not set)
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your-search-api-key
AZURE_SEARCH_INDEX_OPERATOR=operator-reports-index
AZURE_SEARCH_INDEX_MAINTENANCE=maintenance-logs-index

# Redis Configuration (OPTIONAL - defaults to redis://localhost:6379/1)
# Format: redis://[[username]:[password]]@host:port/database
# Examples:
#   Local Docker:     redis://localhost:6379/1
#   With password:    redis://:your-password@localhost:6379/1
#   Remote server:    redis://redis-server.example.com:6379/1
#   Azure Redis:      redis://:access-key@your-cache.redis.cache.windows.net:6380/1
#   With SSL:         rediss://:password@secure-redis.example.com:6380/1
REDIS_CONNECTION_STRING=redis://localhost:6379/1

# Sensor Data API (Optional - for FastAPI integration)
SENSOR_DATA_API_URL=http://localhost:8000

# Model Parameters
TEMPERATURE=0.7
MAX_TOKENS=2000
TOP_K_DOCUMENTS=5

# Agent Configuration
MASTER_AGENT_MODEL=gpt-4
RCA_GENERATION_MODEL=gpt-4

